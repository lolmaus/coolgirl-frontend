{{#paper-nav-container}}
  {{#paper-sidenav class="md-sidenav-left md-whiteframe-z2" locked-open="gt-sm"}}
    {{#paper-toolbar}}
      <div class="md-toolbar-tools">
        <div class="logo">
          <strong>Многоигровочки</strong>
        </div>
      </div>
    {{/paper-toolbar}}

    {{#paper-content}}
      {{#paper-list}}
        {{#paper-item}}
          {{link-to 'Главная' 'index'}}
        {{/paper-item}}

        {{#paper-item}}
          {{link-to 'Игры' 'games'}}
        {{/paper-item}}
      {{/paper-list}}

      {{yield 'sidebar'}}
    {{/paper-content}}
  {{/paper-sidenav}}

  <div layout="column" tabindex="-1" role="main" flex>
    {{#paper-toolbar}}
      <div class="md-toolbar-tools">
        {{#paper-sidenav-toggle as |toggle|}}
          {{#paper-button target=toggle action="toggleMenu" icon-button=true}}{{paper-icon "menu"}}{{/paper-button}}
        {{/paper-sidenav-toggle}}
        <span class="md-breadcrumb-page">
          Многоигровые картриджи для Famicom/Dendy под заказ<sup>alpha</sup>
        </span>
      </div>
    {{/paper-toolbar}}

    {{#paper-content}}
      {{yield "content"}}
    {{/paper-content}}
  </div>
{{/paper-nav-container}}